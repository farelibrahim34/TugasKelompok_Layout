<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardsatu"
        android:layout_width="match_parent"
        android:backgroundTint="@color/black"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/relsatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pengaturan"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/panah"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Pengaturan"
                android:textStyle="bold"
                android:textSize="30dp"/>
            <ImageView
                android:id="@+id/panah"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/relsatu"
        android:layout_below="@id/cardsatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tekssatu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Petunjuk bagi Pengguna"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tekssatu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reldua"
        android:layout_below="@id/relsatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/teksdua"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Periksa Pembaruan"/>
        <EditText
            android:layout_toRightOf="@id/teksdua"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:text="Versi saat ini:V1.3.2.0"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reltiga"
        android:layout_below="@id/reldua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tekstiga"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Umpan Balik"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tekstiga"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
    </RelativeLayout>


</RelativeLayout>